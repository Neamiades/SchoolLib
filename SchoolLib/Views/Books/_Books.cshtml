@model IEnumerable<Book>
@using SchoolLib.Models.Books

@{ 
    string bookType, controllerName;
}
<table class="table">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Автор</th>
            <th>Шифр автора</th>
            <th>Ціна</th>
            <th>Тип</th>
            <th>Рік публікації</th>
            <th>Примітки</th>
            <th>Статус</th>
            <th />
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Discriminator == "AdditionalBook")
            {
                bookType = "Книга";
                controllerName = "AdditionalBooks";
            }
            else
            {
                bookType = "Підручник";
                controllerName = "StudyBooks";
            }
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AuthorCipher)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @bookType
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Published)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @(item.Status == BookStatus.InStock ? "В наявності" : "На руках")
                </td>
                <td>
                    <a asp-controller="@controllerName" asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                    <a asp-controller="@controllerName" asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
                    <a asp-controller="@controllerName" asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@using SchoolLib.Models.Books
@model IEnumerable<Book>

@{
    ViewData["Title"] = "Книжки";
    var isAdBook = (string)ViewData["type"] == "AdditionalBook";

    //string ListPage = $"_{ViewData["type"] as string}s";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-controller="AdditionalBooks" asp-action="Create" class="btn btn-default">Додати нову книжку</a>
    <a asp-controller="StudyBooks" asp-action="Create" class="btn btn-default">Додати новий підручник</a>
    <a asp-controller="Inventories" asp-action="Index" class="btn btn-default">Інвентаризація книг</a>
    <a asp-controller="Provenances" asp-action="Index" class="btn btn-default">Походження книг</a>
</p>
<hr />
<form asp-controller="Books" asp-action="Index" method="post">
    <div>
        @Html.DropDownList("type", ViewData["bookTypesList"] as List<SelectListItem>)
        <input type="number" name="id" placeholder="Інвентарний номер..." value="@ViewData["id"]" />
        <input type="text" name="name" placeholder="Назва..." value="@ViewData["name"]" />
        <input type="text" name="author" placeholder="Автор..." value="@ViewData["author"]" />
        <input type="text" name="authorCipher" placeholder="Авторський шифр..." value="@ViewData["authorCipher"]" />
        <input type="number" name="published" placeholder="Рік публікації..." value="@ViewData["published"]" />
        <input type="text" name="price" placeholder="Ціна..." value="@ViewData["price"]" />
        <input type="text" name="note" placeholder="Примітка..." value="@ViewData["note"]" />
        @Html.DropDownList("status", ViewData["bookStatusList"] as List<SelectListItem>)
        <br /><br />
        <input type="submit" value="Пошук" />
    </div>
</form>

@model SchoolLib.Models.Books.Book

@{
    string titleBook, h2Book, h4Book, type;
    if (ViewData["type"].Equals("stbook"))
    {
        titleBook = "підручника";
        h2Book = "підручник";
        h4Book = "Підручник";
        type = "StudyBook";
    }
    else
    {
        titleBook = "книги";
        h2Book = "книгу";
        h4Book = "Книга";
        type = "AdditionalBook";
    }
    ViewData["Title"] = "Додавання" + titleBook;
}

<h2>@h2Book</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>@h4Book</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Author" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AuthorCipher" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AuthorCipher" class="form-control" />
                <span asp-validation-for="AuthorCipher" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Published" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Published" class="form-control" />
                <span asp-validation-for="Published" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        @if (type == "StudyBook")
        {
            <div class="form-group">
                <label asp-for="Subject" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Subject" class="form-control" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Grade" class="form-control" />
                    <span asp-validation-for="Grade" class="text-danger"></span>
                </div>
            </div>
        }
        else
        {
            <div class="form-group">
                <label asp-for="Language" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Language" class="form-control" />
                    <span asp-validation-for="Language" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Genre" class="form-control" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
            </div>
        }
        <div class="form-group">
            <label asp-for="Note" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
        </div>
        @*Hidden fields --start--*@
        <div class="form-group" style="display: none;">
            <label asp-for="Discriminator" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Discriminator" class="form-control" value="@type"/>
                <span asp-validation-for="Discriminator" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group" style="display: none;">
            <label asp-for="Status" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Status" class="form-control" value="0"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
        @*Hidden fields --end--*@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

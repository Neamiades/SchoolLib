@model SchoolLib.Models.People.Issuance

@{
    ViewData["Title"] = "Редагування формуляру";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>@Html.DisplayNameFor(m => m)</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="ReaderId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <label asp-for="ReaderId" class="control-label">@Model.ReaderId</label>
                <input type="hidden" asp-for="ReaderId" class="form-control" value="@Model.ReaderId" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BookId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <label asp-for="BookId" class="control-label">@Model.BookId</label>
                <input type="hidden" asp-for="BookId" class="form-control" value="@Model.BookId" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IssueDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <label asp-for="IssueDate" class="control-label">@Model.IssueDate</label>
                <input type="hidden" asp-for="IssueDate" class="form-control" value="@Model.IssueDate" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Couse" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Couse" class="form-control" />
                <span asp-validation-for="Couse" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AcceptanceDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <label asp-for="AcceptanceDate" class="control-label">@Model.AcceptanceDate</label>
                <input type="hidden" asp-for="AcceptanceDate" class="form-control" value="@Model.AcceptanceDate" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Note" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Зберегти" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

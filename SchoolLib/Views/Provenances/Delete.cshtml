@model SchoolLib.Models.Books.Provenance

@{
    ViewData["Title"] = "Видалення походження";
}

<h2>@ViewData["Title"]</h2>

<h3>Ви впевнені, що бажаєте видалити це?</h3>
<div>
    <h4>@Html.DisplayNameFor(model => model)</h4>
    <hr />
    <dl class="dl-horizontal">
        <input type="hidden" asp-for="Id" />
        <dt>@Html.DisplayNameFor(model => model.Book)</dt>
        <dd>
            <a asp-controller="Books" asp-action="Details" asp-route-id="@Model.Book.Id">
                @Html.DisplayFor(model => model.Book.Id)
            </a>
        </dd>
        <dt>@Html.DisplayNameFor(model => model.ReceiptDate)</dt>
        <dd>@Html.DisplayFor(model => model.ReceiptDate)</dd>
        <dt>@Html.DisplayNameFor(model => model.WayBill)</dt>
        <dd>@Html.DisplayFor(model => model.WayBill)</dd>
        <dt>@Html.DisplayNameFor(model => model.Place)</dt>
        <dd>@Html.DisplayFor(model => model.Place)</dd>
        <dt>@Html.DisplayNameFor(model => model.Note)</dt>
        <dd>@Html.DisplayFor(model => model.Note)</dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Видалити" class="btn btn-default" /> |
            <a asp-action="Index">Назад до списку</a>
        </div>
    </form>
</div>

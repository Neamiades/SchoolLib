@model SchoolLib.Models.Books.Provenance

@{
    ViewData["Title"] = "Додати походження";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>@Html.DisplayNameFor(model => model)</h4>
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="BookId" class="col-md-2 control-label"></label>*
            <div class="col-md-10">
                @if (ViewBag.BookId != null && ViewBag.Fail == null)
                {
                    <label asp-for="BookId" class="сontrol-label">@ViewBag.BookId</label>
                    <input type="hidden" asp-for="BookId" class="form-control" value="@ViewBag.BookId"/>
                }
                else
                {
                    <input asp-for="BookId" class="form-control"/>
                }
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="WayBill" class="col-md-2 control-label"></label>*
            <div class="col-md-10">
                <input asp-for="WayBill" class="form-control"/>
                <span asp-validation-for="WayBill" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ReceiptDate" class="col-md-2 control-label"></label>*
            <div class="col-md-10">
                <input asp-for="ReceiptDate" class="form-control"/>
                <span asp-validation-for="ReceiptDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Place" class="col-md-2 control-label"></label>*
            <div class="col-md-10">
                <input asp-for="Place" class="form-control"/>
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Note" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Note" class="form-control"/>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Додати" class="btn btn-default"/>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Назад до списку</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
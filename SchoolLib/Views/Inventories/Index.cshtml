@{
    ViewData["Title"] = "Інвентаризація";
}
<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create">Додати до книги</a>
</p>
<hr/>
<div class="form-horizontal row">
    <div class="col-md-2">
        <div class="form-group">
            <div class="col-md-12">
                <input type="number" name="bookId" id="bookId" placeholder="Інвентарний №..." class="form-control" />
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <div class="col-md-12">
                <input type="number" name="year" id="year" placeholder="Рік..." class="form-control" />
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <div class="col-md-12">
                <input type="number" name="actNumber" id="actNumber" placeholder="Номер акту..." class="form-control" />
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <div class="col-md-12">
                <input type="text" name="couse" id="couse" placeholder="Причина..." class="form-control" />
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <div class="col-md-12">
                <input type="text" name="note" id="note" placeholder="Примітка..." class="form-control" />
            </div>
        </div>
    </div>
</div>
<div class="form-group col-md-offset-5 col-md-7">
    <input type="submit" id="submit" name="search" value="Пошук" class="btn btn-default" />
</div>

<div id="results"></div>

@section Scripts {
    <script type="text/javascript">
            $(document).ready(function () {
                $('#submit').click(function (e) {
                    e.preventDefault();
                    var bookId = encodeURIComponent(   $('#bookId').val());
                    var year = encodeURIComponent(     $('#year').val());
                    var actNumber = encodeURIComponent($('#actNumber').val());
                    var couse = encodeURIComponent(    $('#couse').val());
                    var note = encodeURIComponent(     $('#note').val());

                    $('#results').load('@Url.Action("Search")?bookId=' + bookId +
                        '&year=' + year + '&actNumber=' + actNumber + '&couse=' + couse + '&note=' + note);
                });
            });
    </script>
}
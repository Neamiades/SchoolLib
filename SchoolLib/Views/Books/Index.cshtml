<div>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Author)</th>
                <th>@Html.DisplayNameFor(model => model.AuthorCipher)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                @if (isAdBook)
                {
                    <th>@Html.DisplayNameFor(model => ((AdditionalBook)model).Language)</th>
                    <th>@Html.DisplayNameFor(model => ((AdditionalBook)model).Cipher)</th>
                }
                else
                {
                    <th>@Html.DisplayNameFor(model => ((StudyBook)model).Subject)</th>
                    <th>@Html.DisplayNameFor(model => ((StudyBook)model).Grade)</th>
                }
                <th>@Html.DisplayNameFor(model => model.Discriminator)</th>
                <th>@Html.DisplayNameFor(model => model.Published)</th>
                <th>@Html.DisplayNameFor(model => model.Note)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th />
            </tr>
        </thead>
        <tbody>
            @if (isAdBook)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Author)</td>
                        <td>@Html.DisplayFor(modelItem => item.AuthorCipher)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <th>@Html.DisplayFor(modelItem => ((AdditionalBook)item).Language)</th>
                        <th>@Html.DisplayFor(modelItem => ((AdditionalBook)item).Cipher)</th>
                        <td>@Html.DisplayFor(modelItem => item.Discriminator)</td>
                        <td>@Html.DisplayFor(modelItem => item.Published)</td>
                        <td>@Html.DisplayFor(modelItem => item.Note)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Author)</td>
                        <td>@Html.DisplayFor(modelItem => item.AuthorCipher)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <th>@Html.DisplayFor(modelItem => ((StudyBook)item).Subject)</th>
                        <th>@Html.DisplayFor(modelItem => ((StudyBook)item).Grade)</th>
                        <td>@Html.DisplayFor(modelItem => item.Discriminator)</td>
                        <td>@Html.DisplayFor(modelItem => item.Published)</td>
                        <td>@Html.DisplayFor(modelItem => item.Note)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
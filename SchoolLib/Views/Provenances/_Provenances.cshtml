@model IEnumerable<SchoolLib.Models.Books.Provenance>

<table class="table  table-bordered table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Book)</th>
            <th>@Html.DisplayNameFor(model => model.Place)</th>
            <th>@Html.DisplayNameFor(model => model.WayBill)</th>
            <th>@Html.DisplayNameFor(model => model.ReceiptDate)</th>
            <th>@Html.DisplayNameFor(model => model.Note)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Book.Id">
                        @Html.DisplayFor(modelItem => item.Book.Id)
                    </a>
                </td>
                <td>@Html.DisplayFor(modelItem => item.Place)</td>
                <td>@Html.DisplayFor(modelItem => item.WayBill)</td>
                <td>@Html.DisplayFor(modelItem => item.ReceiptDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Note)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model SchoolLib.Models.People.Worker

@{
    ViewData["Title"] = "Видалення";
}

<h2>@ViewData["Title"]</h2>

<h3>Ви впевнені, що хочете видалити?</h3>
<div>
    <h4>@Html.DisplayNameFor(model => model)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Id)</dt>
        <dd>@Html.DisplayFor(model => model.Id)</dd>

        <dt>@Html.DisplayNameFor(model => model.SurName)</dt>
        <dd>@Html.DisplayFor(model => model.SurName)</dd>
        
        <dt>@Html.DisplayNameFor(model => model.FirstName)</dt>
        <dd>@Html.DisplayFor(model => model.FirstName)</dd>
        
        <dt>@Html.DisplayNameFor(model => model.Patronimic)</dt>
        <dd>@Html.DisplayFor(model => model.Patronimic)</dd>
        
        <dt>@Html.DisplayNameFor(model => model.Street)</dt>
        <dd>@Html.DisplayFor(model => model.Street)</dd>
        
        <dt>@Html.DisplayNameFor(model => model.House)</dt>
        <dd>@Html.DisplayFor(model => model.House)</dd>
        
        <dt>@Html.DisplayNameFor(model => model.Apartment)</dt>
        <dd>@Html.DisplayFor(model => model.Apartment)</dd>
        
        <dt>@Html.DisplayNameFor(model => model.Position)</dt>
        <dd>@Html.DisplayFor(model => model.Position)</dd>
        
        <dt>@Html.DisplayNameFor(model => model.LastRegistrationDate)</dt>
        <dd>@Html.DisplayFor(model => model.LastRegistrationDate)</dd>
        
        <dt>@Html.DisplayNameFor(model => model.FirstRegistrationDate)</dt>
        <dd>@Html.DisplayFor(model => model.FirstRegistrationDate)</dd>
        
        <dt>@Html.DisplayNameFor(model => model.Status)</dt>
        <dd>@Html.DisplayFor(model => model.Status)</dd>
        
        <dt>@Html.DisplayNameFor(model => model.Note)</dt>
        <dd>@Html.DisplayFor(model => model.Note)</dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Видалити" class="btn btn-default" /> |
            <a asp-action="Index">Назад до списку</a>
        </div>
    </form>
</div>

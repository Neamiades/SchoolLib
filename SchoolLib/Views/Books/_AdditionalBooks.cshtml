@model IEnumerable<SchoolLib.Models.Books.AdditionalBook>

<table class="table">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Автор</th>
            <th>Шифр автора</th>
            <th>Мова</th>
            <th>Жанр</th>
            <th>Ціна</th>
            <th>Рік публікації</th>
            <th>Примітки</th>
            <th>Статус</th>
            <th />
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AuthorCipher)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Language)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Published)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-controller="AddidionalBooks" asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                    <a asp-controller="AddidionalBooks" asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
                    <a asp-controller="AddidionalBooks" asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>

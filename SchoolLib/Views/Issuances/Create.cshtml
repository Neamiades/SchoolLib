@model SchoolLib.Models.People.Issuance

@{
    ViewData["Title"] = "Видача книги";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-horizontal">
        <h4>@Html.DisplayNameFor(m => m)</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ReaderId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @if (ViewBag.ReaderId != null && ViewBag.Fail == null)
                {
                    <label asp-for="ReaderId" class="control-label">@ViewBag.ReaderId</label>
                    <input type="hidden" asp-for="ReaderId" class="form-control" value="@ViewBag.ReaderId"/>
                }
                else
                {
                    <input asp-for="ReaderId" class="form-control"/>
                }
                <span asp-validation-for="ReaderId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BookId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @if (ViewBag.BookId != null && ViewBag.Fail == null)
                {
                    <label asp-for="BookId" class="control-label">@ViewBag.BookId</label>
                    <input type="hidden" asp-for="BookId" class="form-control" value="@ViewBag.BookId" />
                }
                else
                {
                    <input asp-for="BookId" class="form-control" />
                }
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IssueDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="IssueDate" class="form-control" />
                <span asp-validation-for="IssueDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AcceptanceDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AcceptanceDate" class="form-control" />
                <span asp-validation-for="AcceptanceDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Couse" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Couse" class="form-control" />
                <span asp-validation-for="Couse" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Note" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Додати" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}